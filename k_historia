<?php
if (isset($_POST['detal_wyszukaj']))
{
    if (!empty($_POST['wyszukaj_detal_id']))  //jeżeli id detalu jest wpisana
    {
        $question = 'SELECT * FROM system_detale.historia WHERE detal_id_detal='.$_POST['wyszukaj_detal_id'].';';
        $res=mysql_query($question);    //pobranie historii
        
        echo 'Detal Id: '; echo $_POST['wyszukaj_detal_id']; echo '<br>';
        
        $i=1;
        while ($baza=mysql_fetch_array($res))
            {
                echo $i; 
                echo ' Operator id: '; echo $baza['operatorzy_id_operatorzy'];
                echo ' Maszyna id: '; echo $baza['maszyna_poprzednia']; echo '->'; echo $baza['maszyny_id_maszyny'];
                echo ' Operacja: '; echo $baza['typ_operacji'];
                echo ' Data: '; echo $baza['data'];
                echo '<br>';
                $i++;
            }
    }    
    else
    {
        echo 'Nie wypołniono pola.';
    }
}

?>
